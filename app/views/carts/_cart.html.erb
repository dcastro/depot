<div class="cart_title" > <%= t('.title') %> </div>
<%  if notice%>
  <p id="notice"><%= notice %></p>
<% end %>
  
<table>
  
  <% if false %>
  <% cart.line_items.each do |item| %>
    <tr>
      <td><%= item.quantity %>&times;</td>
      <td><%= item.product.title %></td>
      <td class="item_price" ><%= number_to_currency(item.total_price) %></td>
      <td> <%= button_to 'Remove from Cart', item, :method => :delete, :confirm => 'Are you sure?' %> </td>
      
    </tr>
  <% end %>
  <% end %>

  <%= render(cart.line_items) %>
    
  <tr class="total_line" >
    <td colspan="2" >Total</td>
    <td class="total_cell" ><%= number_to_currency(cart.total_price) %></td>
  </tr>
</table>

<%= button_to t('.empty'), cart, :method => :delete, :confirm => 'Are you sure?', :remote => true %>
<% if @checking_out %>
  <%=  button_to t('.checkout'), new_order_path, :method => :get, :disabled => true %>
<% else %>
  <%=  button_to t('.checkout'), new_order_path, :method => :get %>
<% end %>









