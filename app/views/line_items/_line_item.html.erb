<% if line_item == @current_item %>

    <tr id="current_item" <%= "style='display:none'" if @new%>  >

<% else %>
  <tr>
<% end %>

  <td><%= line_item.quantity %>&times;</td>
  <td><%= line_item.product.title %></td>
  <td class="item_price" ><%= number_to_currency(line_item.total_price) %></td>
  <% if false %> <td> <%= button_to 'x', line_item, :method => :delete, :confirm => 'Are you sure?' %> </td> <% end %>
  <td> <%= link_to '-', {:controller => :line_items, :action => :dec_quantity, :id => line_item, :method => :post}, :remote => true  %> </td>
</tr>